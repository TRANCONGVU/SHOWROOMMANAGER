
@model SHOWROOMMANAGER.Models.customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Client/client_master.cshtml";
}
    <div class="hero inner-page" style="background-image: url('../../Content/client/images/hero_2.jpg');height:100vh !important">

        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-12">                    

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="intro">
            <h1><strong>Để lại thông tin sản phẩm bạn quan tâm và chúng tôi sẽ liên hệ lại</strong></h1>
        </div>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-6">
                            <h6 style="color : black">Full Name</h6>
                            <div class="">
                                @Html.EditorFor(model => model.customer_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <h6 style="color : black">Address</h6>
                            <div class="">
                                @Html.EditorFor(model => model.customer_address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.customer_address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <h6 style="color : black">Your Phone</h6>
                            <div class="">
                                @Html.EditorFor(model => model.customer_phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.customer_phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <h6 style="color : black">Your Email</h6>
                            <div class="">
                                @Html.EditorFor(model => model.customer_email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.customer_email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <h6 style="color : black">Products of Interest</h6>
                            <div class="">                               
                               
                                    @Html.DropDownList("product_id", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.product_id, "", new { @class = "text-danger" })
                               
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit Your Infomation" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4 ml-auto" style="border: 1px solid;
                    border-radius: 10px;
                    box-shadow: 3px 3px 1px 1px;
                }">
                <div class="bg-white p-3 p-md-5">
                    <h3 class="text-black mb-4">Contact Info</h3>
                    <ul class="list-unstyled footer-link">
                        <li class="d-block mb-3">
                            <span class="d-block text-black">Address:</span>
                            <span>34 Street Name, City Name Here, United States</span>
                        </li>
                        <li class="d-block mb-3"><span class="d-block text-black">Phone:</span><span>+1 242 4942 290</span></li>
                        <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>info@yourdomain.com</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}