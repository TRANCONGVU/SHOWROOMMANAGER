@model dynamic
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Client/client_master.cshtml";
}

<div class="hero" style="background-image: url('../../Content/client/images/hero_1_a.jpg');">

    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">

                <div class="row mb-5">
                    <div class="col-lg-7 intro">
                        <h1><strong>Take your car</strong></h1>
                    </div>
                </div>

                <form class="trip-form">

                    <div class="row align-items-center">

                        <div class="mb-4 mb-md-0 col-md-4">
                            <select name="" id="" class="custom-select form-control">
                                @foreach (var item in Model.Brands)
                                {
                                    <option value="@item.brand_name">@item.brand_name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-4 mb-md-0 col-md-4">
                            <select name="" id="" class="custom-select form-control">
                                @foreach (var item in Model.Showrooms)
                                {
                                    <option value="@item.showroom_name">@item.showroom_name</option>
                                }
                            </select>
                        </div>                        
                        <div class="mb-4 mb-md-0 col-md-4">
                            <input type="submit" value="Search Now" class="btn btn-primary btn-block py-3">
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 class="section-heading"><strong>Car Listings</strong></h2>
                <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
        </div>


        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-6 col-lg-4 mb-4">

                    <div class="listing d-block h-100 align-items-stretch">
                        <div class="listing-img mr-4">
                            <img src="../../Content/client/images/car_6.jpg" alt="Image" class="img-fluid">
                        </div>
                        <div class="listing-contents h-100">
                            <h3>@item.product_name</h3>
                            <div class="rent-price">
                                <strong>@item.product_price</strong><span class="mx-1">/</span>day
                            </div>
                            <div class="d-block d-md-flex mb-3 border-bottom pb-3">
                                <div class="listing-feature pr-4">
                                    <span class="caption">Brand:</span>
                                    <span class="number">@item.brand.brand_name</span>
                                </div>
                                <div class="listing-feature pr-4">
                                    <span class="caption">Model</span>
                                    <span class="number">@item.product_model</span>
                                </div>
                                <div class="listing-feature pr-4">
                                    <span class="caption">ShowRoom</span>
                                    <span class="number">@item.Showroom.showroom_name</span>
                                </div>
                            </div>
                            <div>
                                <p>@item.product_description</p>
                                <p class="take-car btn btn-light">
                                    @Html.ActionLink("Details", "Details", new { id = item.product_id })
                                </p>
                                <p class="take-car btn btn-light">
                                    @Html.ActionLink("Contacts", "Contact", new { id = item.product_id })
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

            }

        </div>
        <div class="row">
            <div class="col-5">
               

                
            </div>
        </div>
    </div>
</div>



<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 class="section-heading"><strong>Testimonials</strong></h2>
                <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Brands)
            {
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="testimonial-2">
                        <blockquote class="mb-4">
                            <p>@item.brand_description</p>
                        </blockquote>
                        <div class="d-flex v-card align-items-center">
                            <img src="../../Content/client/images/img_2.jpg" alt="Image" class="img-fluid mr-3">
                            <div class="author-name">
                                <span class="d-block">@item.brand_country</span>
                                <span>@item.brand_name</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<div class="site-section bg-primary py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-md-0">
                <h2 class="mb-0 text-white">What are you waiting for?</h2>
                <p class="mb-0 opa-7">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Obcaecati, laboriosam.</p>
            </div>
            <div class="col-lg-5 text-md-right">
                <a href="#" class="btn btn-primary btn-white">Rent a car now</a>
            </div>
        </div>
    </div>
</div>